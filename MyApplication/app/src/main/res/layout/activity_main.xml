<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cbRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt5Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 mins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbRandom" />

    <Button
        android:id="@+id/bt10Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 mins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt5Min" />

    <Button
        android:id="@+id/bt15Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 mins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt10Min" />
</androidx.constraintlayout.widget.ConstraintLayout>